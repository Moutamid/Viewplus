<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.VipActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:elevation="4dp">

        <!--<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_logo_viewplus" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="casual"
                android:text="@string/app_name"
                android:textColor="@color/red"
                android:textSize="25sp" />

        </LinearLayout>-->

        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/ic_header_white"
            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@id/endLayoutBottom"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/endLayoutBottom"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/coins_text_view_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_coin" />

        </LinearLayout>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                style="@style/cardLayout"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_logo_viewplus" />

                    <TextView
                        style="@style/textviewStyle"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="BENEFITS" />

                    <TextView
                        style="@style/textviewStyle"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal"
                        android:text="20% Off on Campaigns \nIncreased Daily Limits (+50)\nRemove Ads"
                        android:textSize="20sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/cardLayout"
                android:id="@+id/one_week_vip"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <RelativeLayout style="@style/relativeLayout">

                    <LinearLayout style="@style/linearLayout">

                        <TextView
                            style="@style/textviewStyle"
                            android:text="1 Week"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginVertical="10dp"
                        android:layout_marginEnd="20dp"
                        android:text="1.99$"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/red"
                        app:cornerRadius="10dp" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/cardLayout"
                app:cardCornerRadius="25dp"
                android:id="@+id/one_month_vip"
                app:cardElevation="10dp">

                <RelativeLayout style="@style/relativeLayout">

                    <LinearLayout style="@style/linearLayout">

                        <TextView
                            style="@style/textviewStyle"

                            android:text="1 Month (Save 40%)"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginVertical="10dp"
                        android:layout_marginEnd="20dp"
                        android:text="4.99$"
                        android:textColor="@color/black"
                        android:textSize="20sp"

                        android:textStyle="bold"
                        app:backgroundTint="@color/red"
                        app:cornerRadius="10dp" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/cardLayout"
                app:cardCornerRadius="25dp"
                android:id="@+id/three_months_vip"
                app:cardElevation="10dp">

                <RelativeLayout style="@style/relativeLayout">

                    <LinearLayout style="@style/linearLayout">

                        <TextView
                            style="@style/textviewStyle"
                            android:text="3 Months (Save 50%)"

                            android:textSize="20sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginVertical="10dp"
                        android:layout_marginEnd="20dp"
                        android:text="11.99$"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/red"
                        app:cornerRadius="10dp" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/cardLayout"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <RelativeLayout style="@style/relativeLayout">

                    <LinearLayout style="@style/linearLayout">

                        <TextView
                            style="@style/textviewStyle"
                            android:layout_marginVertical="20dp"

                            android:text="Note: Subscriptions are renewed according to specified period. In case you want to stop, renew at anytime, you must enter Google Play Store - Menu - Subscriptions - Palcon Booster - Cancel Subscription"
                            android:textColor="@color/gray"
                            android:textSize="20sp" />

                    </LinearLayout>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>